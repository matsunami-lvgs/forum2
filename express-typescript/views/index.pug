doctype html
html(lang ="ja")
  head
    title #{title}
    meta(charset="UTF-8")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 #{title}
    h2 書き込み
    if  isAdmin===true
      form(method="post" action="/admin/reset")
        button(type="submit") りせっと
    p
    each toukou in posts
      div 
        id #{toukou.id}
        name 投稿者: #{toukou.name}
        timestamp 投稿時間: #{toukou.showCreated}
        br
        postbody #{toukou.body}
        if isAdmin===true
          form(method="post" action="/admin/delete")
            button(type="submit" name="deleteid" value=toukou.id) 削除
          form(method="post" action="/admin/update")
            button(type="submit" name="updateid" value=toukou.id) 編集
    form(method="post" action="/write")
      input.nameform(type="text" name="postwriter" placeholder="名前")
      br
      textarea(name="postbody" placeholder="コメント内容")
      br
      button(type="submit") 投稿する
    p
    if isAdmin===true
      a(href="/logout") ログアウト
    else
      a(href="/login") 管理者ログイン
