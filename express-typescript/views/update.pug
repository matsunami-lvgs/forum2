doctype html
html(lang ="ja")
  head
    title #{title}
    meta(charset="UTF-8")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 #{title}
    h2 編集
    p
    each toukou in posts
      div 
        id #{toukou.id}
        name 投稿者: #{toukou.name}
        timestamp 投稿時間: #{toukou.showCreated}
        br
        span #{toukou.body}
    form(method="post" action="/admin/update/updatesubmit")
      each toukou in posts
        input(type="hidden" name="updateid" value=toukou.id)
        input.nameform(type="text" name="updatename" value=toukou.name)
        br
        textarea(name="updatebody") #{toukou.body}
        br
        button(type="submit") 編集
    a(href="/admin") 戻る


