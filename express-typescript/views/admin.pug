doctype html
html(lang ="ja")
  head
    title #{title}
    meta(charset="UTF-8")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 #{title}
    h2 書き込み
    p
    each toukou in posts
      div 
        span #{toukou.id}
        span 投稿者: #{toukou.name}
        br
        span #{toukou.body}
        span 投稿時間: #{toukou.createdAt}
        form(method="post" action="./delete")
          button(type="submit" name="deletepost" value=toukou.id) 削除
        form(method="post" action="./update")
          button(type="submit" name="updatepost" value=toukou.id) 編集
    form(method="post" action="/write")
      input(type="text" name="postwriter" placeholder="名前")
      br
      textarea(name="postbody" cols="100" rows="10" placeholder="コメント内容")
      br
      button(type="submit") 投稿する
    p
    a(href="/") ログアウト